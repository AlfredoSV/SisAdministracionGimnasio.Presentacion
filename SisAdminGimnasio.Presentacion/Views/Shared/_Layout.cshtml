<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    @Styles.Render("~/Content/css/main.css")
    <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>


    <div class="navcon">

        <div class="nav">



            <nav class="side-nav">
                <ul class="nav-menu">
                    <li class="nav-item"><a href="#"><i class="fas fa-tachometer-alt"></i><span class="menu-text">Inicio</span></a></li>
                    <li class="nav-item"><a href="#"><i class="fas fa-user"></i><span class="menu-text">Citas</span></a></li>
                    <li class="nav-item active"><a href="#"><i class="fas fa-file-alt"></i><span class="menu-text">Entrenadores</span></a></li>
                    <li class="nav-item"><a href="#"><i class="fas fa-play "></i><span class="menu-text">Usuario</span></a></li>
                    <li class="nav-item"><a href="/"><i class="fas fa-sign-out-alt"></i><span class="menu-text">Cerrar sesión</span></a></li>
                </ul>
            </nav>




        </div>


    </div>
    <main class="container-fluid">
        @RenderBody()
    </main>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/Scripts/js/main.js")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
