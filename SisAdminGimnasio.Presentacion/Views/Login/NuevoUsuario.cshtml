
@{
    ViewBag.Title = "Nuevo usuario";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<h2>NuevoUsuario</h2>

@model SisAdminGimnasio.Presentacion.Models.UsuarioViewModel
<div class="gridContainer">

    <div class="gridRow">


        <div class="cardLogin">
            <div>
                <h2 class="headerCardLogin"><i style="font-size:24px" class="fa">&#xf0e7;</i> Registro</h2>


            </div>

            @using (Html.BeginForm("GuardarNuevoUsuario", "Login", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="form-group-lg">
                    @Html.TextBoxFor(m => m.UsuarioC, "", new { @class = "inputLog form-control", @placeholder = "Usuario" })
                    @Html.ValidationMessage("UsuarioC", "", new { @class = "text-danger" })

                </div>
                <div class="form-group-lg">
                    @Html.TextBoxFor(m => m.Contrasenia, "", new { @class = "inputLog form-control", @placeholder = "Contraseña" })
                    @Html.ValidationMessage("Contrasenia", "", new { @class = "text-danger" })
                </div>
                
                <div class="form-group-lg">
                    <span>@Html.ActionLink("Ingresar", "Ingresar", "Login")</span>



                </div>

                <div class="form-group-lg">
                    <input class="sub" type="submit" value="Registrar" />

                </div>

            }
        </div>


    </div>

</div>
