@{
    Layout = null;
}

@model SisAdminGimnasio.Presentacion.Models.Usuario
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    @Styles.Render("~/Content/css/Login.css")

    <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>

    <div class="gridContainer">

        <div class="gridRow">


            <div class="cardLogin">
                <div>
                    <h2 class="headerCardLogin"><i style="font-size:24px" class="fa">&#xf0e7;</i> Bienvenido</h2>


                </div>

                @using (Html.BeginForm("ValidarUsuario", "Login", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                   
                    <div class="form-group-lg">
                        @Html.TextBoxFor(m => m.UsuarioC, "", new { @class = "inputLog form-control", @placeholder = "Usuario" })
                        @Html.ValidationMessage("UsuarioC", "", new { @class = "text-danger" })

                    </div>
                    <div class="form-group-lg">
                        @Html.TextBoxFor(m => m.Contrasenia, "", new { @class = "inputLog form-control", @placeholder = "Contraseña" })
                        @Html.ValidationMessage("Contrasenia", "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group-lg">
                        <span>¿Recordarme?</span>
                        @Html.CheckBoxFor(m => m.Recuerdame, false)


                    </div>

                    <div class="form-group-lg">
                        <input class="sub" type="submit" value="Ingresar" />

                    </div>

                }
            </div>


        </div>

    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/js/main.js")

</body>
</html>


